<?xml version="1.0" encoding="WINDOWS-31J"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>control.HomeControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>category</servlet-name>
		<servlet-class>control.RecipeListControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>category</servlet-name>
		<url-pattern>/category</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>recipe</servlet-name>
		<servlet-class>control.RecipeDetailControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>recipe</servlet-name>
		<url-pattern>/recipe</url-pattern>
	</servlet-mapping>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.jsp</location>
	</error-page>
</web-app>